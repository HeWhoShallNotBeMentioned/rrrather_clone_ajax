<%= render 'layouts/errors', :object => @comment %>

<%= form_for [@question, @comment], remote: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :text %>
    <%= f.text_field :text %>
  </div>
  <p><%= f.submit :class => "btn btn-primary yeehaw" %></p>
<% end %>
