<%= render 'layouts/errors', :object => @question %>
<div id="new_question_form">
<%= form_for(@question) do |f| %>
  <div class="form-group">
    <%= f.label :option1 %>
    <%= f.text_field :option1 %>
    <%= f.label :option2 %>
    <%= f.text_field :option2 %>
  </div>
  <p><%= f.submit :class => "btn btn-primary" %></p>
<% end %>
</div>
