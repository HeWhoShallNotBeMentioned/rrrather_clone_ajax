<h1>Would you rather...</h1>

<h3><%= @question.option1 %></h3>
<br>
"or"
<br>
<h3><%= @question.option2 %></h3>

<h4>Here are the comments for this question:</h4>

<ul id='question_comments'>
  <% if @question.comments.any? %>
    <% @question.comments.each do |comment| %>
      <li>
        <%= task.title %> |
        <br>
        <%= task.text %> |
        <%= link_to "Edit", edit_question_comment_path(@question, comment), id: "edit_comment_button",:class => "btn btn-default", remote: true %> |
        <%= link_to "Delete", question_comment_path(@question, comment),
                                 :data => {:confirm => "Are you sure?",
                                 :method => "delete"},
                                 :class => "btn btn-danger" %>
      </li>
    <% end %>
<% else %>
  <p>None yet!</p>
<% end %>
</ul>

<p><%= link_to "Add a comment", new_question_comment_path(@question), id: "new_comment_button", class: "btn btn-default", remote: true %></p>
<p><%= link_to "Delete Question", question_path(@question),
                        :data => {:confirm => "Are you sure?",
                        :method => "delete"},
                        :class => "btn btn-danger" %></p>


<p><%= link_to "Return to questions", questions_path, :class => "btn btn-default" %></p>
